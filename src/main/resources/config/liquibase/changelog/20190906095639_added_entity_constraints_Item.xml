<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <!--
        Added the constraints for entity Item.
    -->
    <changeSet id="20190906095639-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="item_id"
                                 baseTableName="item_cart"
                                 constraintName="fk_item_cart_item_id"
                                 referencedColumnNames="id"
                                 referencedTableName="item"/>

        <addForeignKeyConstraint baseColumnNames="cart_id"
                                 baseTableName="item_cart"
                                 constraintName="fk_item_cart_cart_id"
                                 referencedColumnNames="id"
                                 referencedTableName="cart"/>
        
        <addForeignKeyConstraint baseColumnNames="game_id"
                                 baseTableName="item"
                                 constraintName="fk_item_game_id"
                                 referencedColumnNames="id"
                                 referencedTableName="game"/>

        <addForeignKeyConstraint baseColumnNames="platform_id"
                                 baseTableName="item"
                                 constraintName="fk_item_platform_id"
                                 referencedColumnNames="id"
                                 referencedTableName="platform"/>

    </changeSet>
</databaseChangeLog>
